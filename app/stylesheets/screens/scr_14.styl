#screen-fourteen
  @extend #screen-six
  background-image: url("../images/bg_six.jpg")

  p
    text-align: left

  .box
    padding: 70px 90px
    height: auto

    &::after
      content: ''
      display: block
      clear: both

    .time-block
    .map-block
      float: left
      color: #fff
      height: 100%

    .time-block
      margin: 0 55px 0 0
      float: left

      li
        display: block
        text-align: right
        margin: 0 0 60px 0

        &:last-child
          margin-bottom: 0px

        h2
          position: relative
          left: 8px
          text-align: right

        span
          font-size: 17px
          position: relative
          top: -12px

    .map-block
      width: 640px
      position: relative
      top: -10px

      h2
        display: block
        text-align: left
        margin: 0 0 20px 0

      .icon-pin
        color: $greyDarkColor
        font-size: 16px
        margin: 2px 10px 2px 0

      .g-map
        margin: 25px 0 0 0
        width: 100%
        height: 280px
        background-color: #333

        iframe
          width: 100%
          height: 100%
          border: 0
