#screen-thirteen
  h2
    font-size: 44px

  .reviews
    margin: 50px 0 0 0

    ul
      overflow: hidden
      margin: 0 0 40px 0

      li
        margin: 0 0 40px 0
        position: relative
        clear: both

        &::after
          content: ''
          display: block
          clear: both

        .review-item
          box-sizing: border-box
          width: 100%
          padding: 35px 45px
          border: 2px solid #fff
          position: relative

        .review-author
          margin: 5px 0 0 0
          text-align: right
          font-size: 18px
          color: #fff

          a
            font-size: inherit
            text-decoration: underline
            color: $redLightColor
            margin-right: 10px

        .icon-quote-top
        .icon-quote-bottom
          position: absolute
          font-size: 24px
          color: $redLightColor

        .icon-quote-top
          left: 10px
          top: -10px

        .icon-quote-bottom
          right: 10px
          bottom: 10px

    .expander
      position: relative

      &::before
      &::after
        content: ''
        width: 350px
        top: 17px
        height: 2px
        position: absolute
        background-color: #fff

      &::before
        left: 0px

      &::after
        right: 0px

      .button
        z-index: 10
