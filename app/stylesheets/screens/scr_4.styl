#screen-four
  height: 730px

  ul
    margin: 80px 0 0 0

    li
      display: block
      float: left
      width: 470px
      height: 120px
      margin: 0 10px 40px 0

      &:nth-child(even)
        margin: 0 0 40px 10px

      .circle
        width: 120px
        height: 120px
        border-radius: 50%
        box-sizing: border-box
        border: 4px solid $blueColor
        float: left
        margin: 0 25px 0 0

        i
          display: block
          width: 100%
          text-align: center
          position: relative
          top: -113px
          font-size: 130px
          color: $blueLightColor

      p
        margin: 15px 0 0 0
