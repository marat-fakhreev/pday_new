#screen-twelve
  h2
    text-align: center
    font-size: 40px

  .block-inner
    padding: 100px 0 50px 0

  .link-to-photoalbum
    margin: 60px 0
    position: relative
    z-index: 10

    h3
      text-align: center

  .photoalbum
    height: 415px
    width: 100%
    background-color: $greyDarkColor
    position: relative

    .photo
      position: relative

      .p-box
        opacity: 0
        transition: all 0.2s ease
        z-index: 100
        height: 415px
        position: absolute
        top: 0
        left: 0
        background-color: rgba($greyDarkColor, 0.9)
        box-sizing: border-box
        padding: 140px

        p
          text-align: center
          color: #fff
          margin: 0 0 20px 0

        .button
          color: #fff
          margin: 0 60px

          &:hover
            color: $greyDarkColor

        &:hover
          opacity: 1
          transition: all 0.2s ease

    img
      height: 100%
      display: inline-block
      float: left
      position: relative
      user-select: none

  div.scrollWrapper
    position: relative
    overflow: hidden
    width: 100%
    height: 100%

  div.scrollableArea
    position: relative
    width: auto
    height: 100%
