#screen-one
  background-image: url("../images/bg_one.jpg")
  border-bottom: 2px solid $redLightColor

  &.partners
    height: 160px

  h3
    margin: -5px 0 0 0

  p
    display: block
    font-family: $fontTwo

  .payu
    position: relative
    top: -15px

    .payu-part-one
    .payu-part-two
      color: #fff
      font-size: 20px

    .payu-part-two
      position: absolute
      top: 0
      left: 62px

  .container
    position: relative
    width: 100%
    box-sizing: border-box
    padding: 50px 0
    clearfix()

    > p
      width: 570px
      margin: 25px 0

    .top-list
      .line-one
        col(21/100)
        height: 85px

        &:nth-child(2)
          width: 22.5%

        &:last-child
          width: 30%

        span
          display: block
          font-family: $fontTwo
          margin: 0 0 5px 0

        .tel
          font-size: 21px
          font-family: $fontTwo
          font-weight: bold

        .general-partner
          display: block
          position: relative
          width: 100%
          height: 40px

          .logo
            display: block
            background-image: url("../images/partner_logos/43.png")
            background-size: cover
            width: 55px
            height: 40px
            position: absolute
            top: 0
            left: -5px

          .title
            position: absolute
            top: 5px
            left: 60px
            font-size: 10px

          .link
            position: absolute
            top: 19px
            left: 60px
            font-size: 10px

        .partner
          display: block
          background-image: url("../images/partners/e-partner.png")
          background-size: cover
          width: 171px
          height: 28px

        .likes-button
          margin: 10px 0 0 0

          div
            margin: 0px
            float: left

    ul.bottom-list
      li
        col(1/3)

        &.active
          .line-two
            .box
              background-color: $redLightColor
              clearfix()

            .b-reg
              .button
                background-color: #fff
                color: $redLightColor

            .day-text
              font-family: inherit

            &::before
              content: ''
              top: 100%
              left: 50%
              border: solid transparent
              height: 0
              width: 0
              position: absolute
              pointer-events: none
              border-color: transparent
              border-top-color: $redLightColor
              border-width: 15px
              margin-left: -15px

        &.inactive
          .line-two
            &::before
              content: ''
              top: 0
              left: 0
              right: 0
              bottom: 0
              position: absolute
              z-index: 10

        .line-two
          position: relative

          .box
            padding: 10px 25px 25px 25px
            border-radius: 4px
            background-color: rgba(#fff, 0.2)
            clearfix()

          .b-title
            clearfix()

          .b-reg
            .button
              margin: 10px 0 0 0
              padding: 0
              font-weight: bold

          .day
            col(4/15)

          p
            col(11/15)
            position: relative
            top: 8px

  .scroll-button
    margin: 40px 0 0 0
    cursor: pointer

    span
      font-size: 18px
      display: block
      text-align: center

    .icon-scroll
      margin: 10px 0 0 0
      text-align: center
      font-size: 30px
      color: $greyDarkColor
      position: relative
      top: -25px
