#screen-fiveteen
  .box
    margin: 50px 0
    padding: 40px 240px
    border: 2px solid $redLightColor
    border-radius: 75px
    box-sizing: border-box

    .title
      &::after
        content: ''
        display: block
        clear: both

    h2
      float: left
      color: $redLightColor
      font-weight: 400

    span
      float: left
      position: relative
      top: 33px
      font-size: 17px
      margin-right: 20px

    .button
      float: left
      width: 260px
      margin: 8px
      position: relative
      top: 5px

  p
    &.center
      margin: 20px 0 70px 0

  .grid
    margin: 50px 110px 0 110px
    clearfix()

  .column
    col(1/2)

    ul
      width: 100%
      height: 100%

      li
        height: 90px

      div
        margin: 0 10px 0 0
        height: 55px
        width: 50px
        text-align: center
        line-height: 55px
        float: left
        font-size: 50px
        color: $redLightColor
        position: relative

  .left-column
    li
      &:nth-child(1)
        div
          top: -40px
        p
          height: 100%
          line-height: 55px
      &:nth-child(2)
        div
          top: -40px
      &:nth-child(3)
        div
          top: -80px
          font-size: 80px

  .right-column
    margin: 40px 0

    li
      &:nth-child(1)
        div
          top: -40px
      &:nth-child(2)
        div
          top: -20px
          line-height: 85px

      p
        height: 100%
        line-height: 55px

  ul.list
    margin: 0 0 0 20px

    li
      list-style-type: disc
      list-style-position: inside
      margin: 3px 0 0 0

    p
      display: inline
