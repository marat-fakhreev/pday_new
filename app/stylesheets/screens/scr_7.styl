#screen-seven
  background-image: url("../images/bg_seven.jpg")
  height: auto

  a.link
    font-size: 15px
    color: $redLightColor

  p
    font-family: $fontTwo
    font-size: 17px

  h4
    font-size: 30px
    font-weight: 400

  .org-column
    position: relative
    margin: 50px 0
    text-align: center

    &::after
      height: 0
      content: ''
      display: block
      clear: both

    > li
      float: left
      width: 420px
      margin 0 30px

      &:nth-child(1)
        .photo-circle
          background-image: url('../images/persons/1.jpg')

      &:nth-child(2)
        .photo-circle
          background-image: url('../images/persons/2.jpg')

      .photo-circle
        width: 240px
        height: 240px
        border-radius: 50%
        background-color: #333
        text-align: center
        position: relative
        left: 50%
        margin: 0 0 20px -120px
        background-position: center 0px
        background-size: cover
        border: 2px solid #fff

      .social
        position: relative
        left: 50%
        margin-left: -45px
