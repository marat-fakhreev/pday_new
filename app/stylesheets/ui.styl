.social
  position: relative
  height: 100%
  margin: 10px 0 12px 0

  li
    float: left
    width: 16px
    margin: -7px 7px 0 7px

  &::after
    height: 0
    content: ''
    display: block
    clear: both

.button
  display: block
  cursor: pointer
  padding: 0 30px
  margin: 0 15px
  height: 35px
  line-height: 30px
  text-align: center
  border: 2px solid #fff
  border-radius: 18px
  box-sizing: border-box

  &.button-dark
    margin: 15px 15px 0 15px
    border-color: $greyDarkColor
    color: $greyDarkColor
    center(260px)

    &:hover
      background-color: $greyDarkColor
      color: #fff

  &.button-light
    center(260px)

  &:hover
    background-color: #fff
    color: $greyDarkColor

.pop-up
  display: none
  position: fixed
  z-index: 1000
  left: 0
  top: 0
  right: 0
  bottom: 0
  background-color: rgba($greyDarkColor, 0.9)

  &.show
    display: block

  .pop-up-inner
    width: 580px
    height: 580px
    background-color: #fff
    position: absolute
    top: 50%
    left: 50%
    margin -290px 0 0 -290px
    padding: 60px 45px
    box-sizing: border-box

    .close-pop-up
      position: absolute
      top: 2px
      right: 15px
      color: #444444
      font-size: 55px
      cursor: pointer

      &:hover
        color: $redLightColor

form
  margin: 0

  .field
    margin: 0 0 20px 0

  h2
    font-size: 56px

  .partner-h2
    margin: 0 0 40px 0

  p
    font-size: 16px
    margin: 20px 0

  label
    font-size: 18px
    font-weight: 700
    display: block
    margin: 0 0 5px 0

  span
    margin: 0 0 20px 10px

  input
    background-color: #dcdcdc
    border: none
    width: 100%
    height: 45px
    box-sizing: border-box
    color: $greyDarkColor
    padding: 10px 20px
    font-size: 18px

  input[type="submit"]
    cursor: pointer
    margin: 25px 0 0 0
    height: 60px
    background-color: $redLightColor
    color: #fff
    text-transform: uppercase
    font-size: 16px
    font-weight: 700

